{
  "compilerOptions": {
    "rootDir": "./src",            
    "outDir": "./dist",            

    "target": "ES6",               
    "module": "ES6",               
    "lib": ["ES6", "DOM"],         
    "moduleResolution": "node",

    "sourceMap": true,             
    "declaration": false,          

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],         
  "exclude": ["node_modules"]
}
